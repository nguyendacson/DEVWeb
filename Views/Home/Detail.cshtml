@model project1.ViewModels.EmployeeDetailVM
@{
    ViewData["Title"] = "Screen Detail";
}
<header class="header_Detail">
    <h1>@ViewData["Title"]</h1>
    <div>
        <form asp-controller="Home" asp-action="Create" method="post">
            <input type="hidden" name="Employee.Id" value="@Model.Employee!.Id" />

            <div class="form-group mt-2">
                <label>Lương cơ bản</label>
                <input asp-for="SalaryInputVM.BaseSalary" class="form-control" placeholder="Nhập lương cơ bản" />
            </div>

            <div class="form-group mt-2">
                <label>Thưởng</label>
                <input asp-for="SalaryInputVM.Bonus" class="form-control" placeholder="Nhập thưởng (nếu có)" />
            </div>
            <button  type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
</header>

<body>
    <div class="card" style="width: max(); margin-top: 20px">
        <div class="card-body">
            <h5 class="card-title">Employee Info</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.Employee!.Name</h6>
            <p class="card-text" style="margin-bottom:.5em">Age: @Model.Employee.Age</p>
            <p class="card-text" style="margin-bottom:.5em">Address: @Model.Employee.Address</p>
            <p class="card-text">
                Salary: @(Model.Salary?.TotalSalary ?? 0)
            </p>
        </div>
    </div>

    <p>Use this page to detail your site's privacy policy.</p>

</body>